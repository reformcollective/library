{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useSelfClosingElements": {
					"level": "warn",
					"fix": "safe"
				}
			},
			"correctness": {
				"useExhaustiveDependencies": {
					"level": "error",
					"options": {
						"hooks": [
							{
								"name": "useAnimation",
								"closureIndex": 0,
								"dependenciesIndex": 1
							}
						]
					}
				},
				"noUnusedImports": "warn",
				"noConstantMathMinMaxClamp": "warn",
				"useArrayLiterals": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"files": {
		"ignore": [
			"pnpm-lock.yaml",
			".vscode",
			"gsapHelpers",
			"app/library/gsapHelpers"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
